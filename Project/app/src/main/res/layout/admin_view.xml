<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/admin_v_pro"
        android:layout_width="132dp"
        android:layout_height="48dp"
        android:layout_marginBottom="224dp"
        android:backgroundTint="#000000"
        android:text="Profiles"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/admin_v_fac"
        app:layout_constraintVertical_bias="0.13" />

    <Button
        android:id="@+id/admin_v_fac"
        android:layout_width="132dp"
        android:layout_height="48dp"
        android:backgroundTint="#000000"
        android:text="Facilities"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/admin_v_ev"
        android:layout_width="132dp"
        android:layout_height="48dp"
        android:layout_marginTop="88dp"
        android:backgroundTint="#000000"
        android:text="Events"
        app:layout_constraintBottom_toTopOf="@+id/admin_v_fac"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.94" />

    <TextView
        android:id="@+id/admin_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/admin_v_ev"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.81" />

</androidx.constraintlayout.widget.ConstraintLayout>